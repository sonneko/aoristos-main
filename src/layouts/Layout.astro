---
import Header from "./Header.astro";
import Footer from "./Footer.astro";

interface Props {
	title: string;
	description: string;
	ogpImage: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, user-scalable=1.0, minimum-scale=1.0, maximum-scale=1.0"
		/>

		<meta name="generator" content={Astro.generator} />

		{/*title and meta-description*/}
		<title>{props.title}</title>
		<meta name="description" content={props.description} />

		{/*IE対応*/}
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />

		{/* ogp and twitter card*/}
		<meta property="og:url" content="https://aoristos.net/" />
		<meta property="og:title" content={props.title} />
		<meta property="og:type" content="website" />
		<meta property="og:description" content={props.description} />
		<meta property="og:image" content={props.ogpImage} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="Team_Aoristos" />
		<meta property="og:site_name" content="Team Aoristos公式サイト" />
		<meta property="og:local" content="ja_JP" />

		{/*icons 要設定！！*/}
		<link rel="icon" href="画像URL" sizes="16x16" type="image/png" />
		<link rel="icon" href="画像URL" sizes="32x32" type="image/png" />
		<link rel="icon" href="画像URL" sizes="48x48" type="image/png" />
		<link rel="icon" href="画像URL" sizes="62x62" type="image/png" />

		{/*iOSのアプリアイコン 要設定！！*/}
		<link rel="apple-touch-icon-precomposed" href="画像のURL" />

		{/*Windows用タイル 要設定！！*/}
		<meta name="msapplication-TileImage" content="画像のURL" />
		<meta name="msapplication-TileColor" content="#FFFDFA" />
	</head>
	<body>
		<Header />
		<div class="spacer" />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Helvetica Neue", Arial, "Hiragino Kaku Gothic ProN",
			"Hiragino Sans", Meiryo, sans-serif;
			float: none;
	}
</style>

<style is:global>
	.spacer{
		border: blue 1px solid;
	}
</style>